<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopCard"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:background="#d3d3d3"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDoctorImage"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/btnLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/ivDoctorImage"
            android:src="@drawable/ic_doctor_icon"
            android:layout_toRightOf="@id/ivDoctorImage" />
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:background="@color/black"
            android:layout_toEndOf="@id/btnLogo"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_height="22dp"
            android:layout_toRightOf="@id/btnLogo"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/view"
            android:layout_toRightOf="@id/btnLogo"
            android:text="Noida"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivDoctorImage"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/tvLocation"
            android:text="Dr. Sudhansu Shekhar"
            android:layout_toRightOf="@id/ivDoctorImage"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tvSpecialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDoctorName"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/ivDoctorImage"
            android:layout_toRightOf="@id/ivDoctorImage"
            android:text="MBBS,DNB(Family Medicine)"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSpecialization"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/ivDoctorImage"
            android:layout_toRightOf="@id/ivDoctorImage"
            android:text="Physician"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvSpeaks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPost"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/ivDoctorImage"
            android:layout_toRightOf="@id/ivDoctorImage"
            android:text="Speaks : "
            android:textColor="#1b96b7"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPost"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/tvSpeaks"
            android:layout_toRightOf="@id/tvSpeaks"
            android:textStyle="bold"
            android:text="Hindi"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivDoctorImage"
            android:layout_alignLeft="@id/ivDoctorImage"
            android:layout_alignRight="@id/ivDoctorImage"
            android:background="#1b96b7"
            android:gravity="center_horizontal"
            android:text="15 years exp"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnConsultNowToDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSpeaks"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/roboto"
            android:text="Consult Now"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>